{
  "name": "Chrome Onetimesecret",
  "version": "1.0.0",
  "author": "Klaus Gamauf",
  "description": "Chrome Extension to ease creation of OTS links",
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background": {
    "scripts": ["background_page.js"]
  },
  "browser_action": {
    "default_icon": {
      "48": "logo.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": false,
    "open_in_tab": true
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "tabs",
    "storage",
    "https://*/"
  ],
  "web_accessible_resources": [
    "background_page.js.map",
    "options.js.map"
  ]
}